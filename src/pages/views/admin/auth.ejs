<div class="auth row">
  <div class="auth__item col cent">
    <div>
      <h1><span class="welcomeText"></span></h1>
    </div>
    <form action="" class="auth__form" id="adminForm">
      <div>
        <p id="error-message"></p>
      </div>

      <div class="input__box">
        <p class="label">Email</p>
        <div class="input">
          <input type="text" id="email" required>
        </div>
      </div>
      <div class="input__box">
        <p class="label">Password</p>
        <div class="input">
          <input type="password" id="password" required>
        </div>
      </div>

      <button class="auth__btn">Sign In</button>
    </form>
  </div>
  <div class="auth__item">
    <img class="auth__item__img" src="/auth.jpg" alt="Church">
  </div>
</div>

<style>
  .auth {
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .auth__item {
    width: 50%;
    height: 100%;
  }

  .auth__item__img {
    width: 100%;
    height: 100%;
    object-fit: fill;
    object-position: center;
  }

  .auth__form {
    width: 70%;
    display: flex;
    gap: 10px;
    flex-direction: column;
  }

  .auth__btn {
    height: 45px;
    margin-top: 30px;
    color: var(--white);
    background-color: var(--lapis-blue);
  }
</style>

<script type="module">
  const adminForm = document.getElementById('adminForm')
  adminForm.addEventListener('submit', e => {
    e.preventDefault()
    const email = document.getElementById('email')
    const password = document.getElementById('password')
    const errorPara = document.getElementById('error-message')
    axios.post('/ouhatjuusdtnwot/auth', {
      email: email.value,
      password: password.value
    }).then(
      response => {
        if (response.data.error) {
          errorPara.innerText = response.data.message
        } else {
          window.location.assign('/ouhatjuusdtnwot')
        }
      }
    ).catch(
      error => {

        errorPara.innerText = "Unexcpeted Error"
      }
    )
  })
  var typed = new Typed('.welcomeText', {
    strings: ["Ekú àbò", "Barka da dawowa", "Nnọọ na azụ"],
    typeSpeed: 30,
    backSpeed: 30,
    loop: true
  });
</script>
